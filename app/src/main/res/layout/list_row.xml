<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_row_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/list_row_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_list_up" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/list_row_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_list_down" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/list_row_tv_filename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="18sp" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/list_row_tv_playtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="15sp" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/list_row_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_list_delete" />

</LinearLayout>